{
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:demo": "ng build demo --prod",
    "build:lib": "ng build angular-paginator --prod",
    "build": "npm run build:lib && npm run build:demo",
    "postbuild:lib": "node ./scripts/postbuild.js",
    "e2e": "ng e2e",
    "lint": "ng lint",
    "lint:scripts": "eslint ./scripts",
    "ng": "ng",
    "prerelease": "npm run build:lib",
    "release": "sh ./scripts/release.sh",
    "serve": "ng serve --open --port 5005 --host 0.0.0.0",
    "test:demo": "ng test demo --browsers ChromeHeadless --watch false",
    "test:lib": "ng test angular-paginator --browsers ChromeHeadless --watch false",
    "test": "npm run test:lib && npm run test:demo",
    "watch:lib": "ng build angular-paginator --watch"
  },
  "dependencies": {
    "@angular/animations": "~10.2.0",
    "@angular/common": "~10.2.0",
    "@angular/compiler": "~10.2.0",
    "@angular/core": "~10.2.0",
    "@angular/forms": "~10.2.0",
    "@angular/platform-browser": "~10.2.0",
    "@angular/platform-browser-dynamic": "~10.2.0",
    "@angular/router": "~10.2.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1002.0",
    "@angular/cli": "~10.2.0",
    "@angular/compiler-cli": "~10.2.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "bootstrap": "^4.5.3",
    "chalk": "^4.1.0",
    "codelyzer": "^6.0.0",
    "eslint": "^7.17.0",
    "eslint-config-pegasus": "^2.0.1",
    "husky": "^4.3.7",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^10.1.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
