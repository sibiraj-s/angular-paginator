{
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:demo": "ng build demo",
    "build:lib": "ng build angular-paginator",
    "build": "npm run build:lib && npm run build:demo",
    "postbuild:lib": "node ./scripts/postbuild.js",
    "lint": "ng lint",
    "eslint": "eslint ./scripts",
    "ng": "ng",
    "prerelease": "npm run build:lib",
    "release": "sh ./scripts/release.sh",
    "demo": "ng serve --open --port 5005",
    "test:demo": "ng test demo --browsers ChromeHeadless --watch false",
    "test:lib": "ng test angular-paginator --browsers ChromeHeadless --watch false",
    "test": "npm run test:lib && npm run test:demo",
    "dev": "ng build angular-paginator --watch --configuration development",
    "prepare": "is-ci || husky install"
  },
  "dependencies": {
    "@angular/animations": "~12.2.7",
    "@angular/common": "~12.2.7",
    "@angular/compiler": "~12.2.7",
    "@angular/core": "~12.2.7",
    "@angular/forms": "~12.2.7",
    "@angular/platform-browser": "~12.2.7",
    "@angular/platform-browser-dynamic": "~12.2.7",
    "@angular/router": "~12.2.7",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.7",
    "@angular-eslint/builder": "12.6.1",
    "@angular-eslint/eslint-plugin": "12.6.1",
    "@angular-eslint/eslint-plugin-template": "12.6.1",
    "@angular-eslint/schematics": "12.6.1",
    "@angular-eslint/template-parser": "12.6.1",
    "@angular/cli": "~12.2.7",
    "@angular/compiler-cli": "~12.2.7",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "5.2.0",
    "@typescript-eslint/parser": "5.2.0",
    "bootstrap": "^5.1.3",
    "chalk": "^4.1.2",
    "eslint": "^8.1.0",
    "eslint-config-pegasus": "^3.0.1",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "lint-staged": "^11.2.6",
    "ng-packagr": "^12.1.0",
    "typescript": "~4.3.5"
  }
}
